<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F1"
        android:orientation="vertical">



        <!--above bar -->
        <TextView
            android:id="@+id/tv_above"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F3F3E6"
            android:text="About Happy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--blank -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <!--image view -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:background="#F9F9F1"
                        />

                    <ImageView
                        android:id="@+id/img_dog"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        app:srcCompat="@drawable/img_dog_example" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:background="#F9F9F1"
                        />
                </LinearLayout>

                <!--blank-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                </LinearLayout>

                <!--information-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/colorMainLight">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:ems="10"
                            android:text="Dog ID"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:ems="10"
                            android:text="Name"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"

                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Gender"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"

                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Age"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"

                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Species"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"

                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Birth"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Owner Name"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:ems="10"
                            android:text="Phone"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:ems="10"
                            android:text="E-mail (ID)"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:ems="10"
                            android:text="Password"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />

                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />

                        <TextView
                            android:id="@+id/tv_species"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />

                        <TextView
                            android:id="@+id/tv_birth"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />

                        <TextView
                            android:id="@+id/tv_owner_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />

                        <TextView
                            android:id="@+id/tv_owner_phone"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />

                        <TextView
                            android:id="@+id/tv_owner_email"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            />

                        <TextView
                            android:id="@+id/tv_owner_password"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            android:text="**********"
                            />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/colorMainLight">

                    </LinearLayout>

                </LinearLayout>

                <!--blank-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_edit_dog_profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/bg_roundcorner_button"
                        android:text="Edit Information"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>



                </LinearLayout>

                <!--blank-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                </LinearLayout>


            </LinearLayout>




        </ScrollView>







    </LinearLayout>
</android.support.constraint.ConstraintLayout>