<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffee4"
    tools:context="dognose.cd_dog.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F3F3E6"
            android:text="RUMYPET"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorMainLight">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bt_img_add"/>


            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/btn_line_differentcolor"
                android:text="Register My Dog"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center|left"/>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/btn_inf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorMainLight">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bt_img_dog"/>


            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/btn_line_differentcolor"
                android:text="Information of my Dog"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center|left"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_find"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorMainLight">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bt_img_search"/>


            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/btn_line_differentcolor"
                android:text="Find the Dog"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center|left"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/colorMainDark">

            <LinearLayout
                android:id="@+id/btn_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">


                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:background="@drawable/bt_img_list" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_set"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:background="@drawable/bt_img_set" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>
